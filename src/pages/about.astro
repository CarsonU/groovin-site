---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Gallery from '~/components/widgets/Gallery.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features2 from '~/components/widgets/Features2.astro';

// Images
import sophJanice2 from '~/assets/images/soph-janice-2.jpg';
import janiceFire2 from '~/assets/images/janice-fire-2.jpg';
import sophFire1 from '~/assets/images/soph-fire-1.jpg';
import sophLed1 from '~/assets/images/soph-led-1.jpg';
import sophAerial1 from '~/assets/images/soph-aerial-1.png';
import sophJaniceAerial1 from '~/assets/images/soph-janice-aerial-1.png';
import sophJaniceDay2 from '~/assets/images/soph-janice-day-2.jpg';
import janiceLed1 from '~/assets/images/janice-led-1.jpg';

const galleryImages = [
  { src: sophJanice2, alt: 'Soph and Janice performing with fire' },
  { src: janiceFire2, alt: 'Janice fire performance' },
  { src: sophFire1, alt: 'Soph fire performance' },
  { src: sophLed1, alt: 'Soph LED performance' },
  { src: sophAerial1, alt: 'Soph Aerial Silk performance' },
  { src: sophJaniceAerial1, alt: 'Soph and Janice Aerial Duo' },
  { src: sophJaniceDay2, alt: 'Soph and Janice Daytime performance' },
  { src: janiceLed1, alt: 'Janice LED performance' },
];

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="About Us"
    title="Groovin' Embers"
    subtitle="The Groovin' Embers are a female flow and fire duo that's been lighting up the East Coast for the past 5 years. We put on spectacular circus showcases that combine choreography, acrobatics, and prop mastery. Our captivating shows are completely customizable, from our costumes to stationary or roaming performances. Our skilled artists specialize in fire manipulation, aerial arts, and various flow props that are guaranteed to enchant you. We believe flow arts elevates every event, adding a truly unforgettable element. Allow us to wow you!"
  />

  <!-- Insurance & Safety Info -->
  <Features2
    title="Professional & Insured"
    tagline="Safety First"
    columns={3}
    items={[
      {
        title: 'Fully Insured',
        description:
          'We carry comprehensive liability insurance for all performances. Certificate of Insurance (COI) available upon request.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Safety Trained',
        description:
          'Our performers are trained in fire safety protocols and always work in pairs with safety equipment on hand.',
        icon: 'tabler:flame-off',
      },
      {
        title: 'OSHA Compliant',
        description:
          'We follow industry-standard safety guidelines and can provide fire safety briefings for your venue staff.',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- FAQ Section -->
  <FAQs
    title="Frequently Asked Questions"
    tagline="FAQ"
    items={[
      {
        title: 'What are the space requirements for fire performances?',
        description:
          'Fire performances require a minimum of 15x15 feet of clear space and ceilings at least 12 feet high if indoors. Outdoor performances are preferred.',
      },
      {
        title: 'What are the requirements for aerial performances?',
        description:
          'Aerial requires a structural rigging point rated for at least 1,500 lbs or we can provide a portable rig with sufficient floor space.',
      },
      {
        title: 'Do you have liability insurance?',
        description: 'Yes! We are fully insured and can provide a Certificate of Insurance (COI) upon request.',
      },
      {
        title: 'How far do you travel?',
        description:
          'We are based on the East Coast but travel nationwide. Travel fees apply for locations outside our home region.',
      },
      {
        title: 'Can you customize performances?',
        description: 'Absolutely! We customize costumes, music, and performance style to match your event theme.',
      },
    ]}
  />

  <!-- Past Venues Placeholder -->
  <div class="max-w-6xl mx-auto px-4 py-12 text-center">
    <p class="text-muted text-sm uppercase tracking-wide mb-2">Trusted By</p>
    <h2 class="text-2xl font-bold mb-8">Festivals, Venues & Businesses</h2>
    <p class="text-muted">Logos of past clients coming soon.</p>
  </div>

  <Gallery images={galleryImages} />
</Layout>
