---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Services"
    title="What We Do"
    subtitle="From intimate private events to large-scale music festivals, we bring the fire wherever we go."
  />

  <!-- Festivals Section -->
  <Content
    id="festivals"
    isReversed
    items={[
      {
        title: 'Fire Safety Certified',
        description: 'We can conduct fire safety meetings and training with festival staff.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Stage Shows & Roaming',
        description: 'Choreographed stage performances or ambient roaming throughout the grounds.',
        icon: 'tabler:walk',
      },
      {
        title: 'Multi-Day Availability',
        description: 'Available for extended bookings across festival weekends.',
        icon: 'tabler:calendar-event',
      },
    ]}
  >
    <Fragment slot="content">
      <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-4">Festivals</h2>
      <p class="text-muted dark:text-slate-400 mb-6">
        We have extensive experience performing at music festivals and large outdoor events. Our team is equipped to
        handle the unique demands of festival environments, including fire safety protocols and coordination with event
        staff.
      </p>
    </Fragment>
    <Fragment slot="image">
      <img src="/images/hero.jpg" alt="Festival Performance" class="rounded-lg shadow-lg" />
    </Fragment>
  </Content>

  <!-- Events Section -->
  <Content
    id="events"
    items={[
      {
        title: 'Weddings & Galas',
        description: 'Elegant performances tailored to formal occasions.',
        icon: 'tabler:heart',
      },
      {
        title: 'Corporate Events',
        description: 'Wow your clients and employees with a memorable show.',
        icon: 'tabler:building',
      },
      {
        title: 'Private Parties',
        description: 'Birthdays, celebrations, and private gatherings.',
        icon: 'tabler:confetti',
      },
    ]}
  >
    <Fragment slot="content">
      <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-4">Private Events</h2>
      <p class="text-muted dark:text-slate-400 mb-6">
        Whether it's a wedding, corporate event, or private party, we create customized performances that fit your theme
        and venue. Our shows can range from grand stage presentations to subtle ambient entertainment.
      </p>
    </Fragment>
    <Fragment slot="image">
      <img src="/images/soph-janice-1.jpg" alt="Private Event Performance" class="rounded-lg shadow-lg" />
    </Fragment>
  </Content>

  <!-- Performance Types -->
  <Features2
    title="Our Performance Types"
    columns={2}
    items={[
      {
        title: 'Fire Performance',
        description: 'Choreographed fire shows with torches, fans, and staffs.',
        icon: 'tabler:flame',
      },
      {
        title: 'LED Light Shows',
        description: 'Vibrant light performances perfect for indoor venues.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Daytime Flow Arts',
        description: 'Elegant silk fans and hoop dance for daytime events.',
        icon: 'tabler:sun',
      },
      {
        title: 'Aerial Arts',
        description: 'Breathtaking acrobatics and aerial bartending.',
        icon: 'tabler:star',
      },
    ]}
  />

  <CallToAction
    title="Ready to book?"
    subtitle="Contact us to discuss your event."
    actions={[{ variant: 'primary', text: 'Get in Touch', href: '/contact' }]}
  />
</Layout>
