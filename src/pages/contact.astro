---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Contact"
    title="Let's Connect!"
    subtitle="Ready to add some fire to your next event? We'd love to hear from you."
  />

  <ContactUs
    id="form"
    title="Send us a message"
    subtitle="Tell us about your event and we'll get back to you within 24 hours."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'event_date',
        label: 'Event Date (optional)',
      },
    ]}
    textarea={{
      label: 'Tell us about your event',
    }}
    disclaimer={{
      label: 'By submitting this form, you agree to be contacted about your inquiry.',
    }}
    description="We typically respond within 24 hours."
  />

  <Features2
    title="Other ways to reach us"
    columns={2}
    items={[
      {
        title: 'Email',
        description: 'groovinembers@example.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Social Media',
        description: 'Find us on Instagram and Facebook @groovin_embers',
        icon: 'tabler:brand-instagram',
      },
    ]}
  />
</Layout>
